{
  "testCases": [
    {
      "name": "valid_message_approval",
      "description": "测试有效消息通过审核",
      "input": {
        "callId": "test_call_001",
        "timestamp": 1640995200000,
        "security": "calculated_signature",
        "payload": {
          "from": "user001",
          "to": "user002",
          "msgId": "msg_001",
          "chatType": "chat",
          "msgType": "txt",
          "payload": {
            "msg": "Hello, this is a normal message"
          }
        }
      },
      "expectedOutput": {
        "valid": true,
        "code": "HX:10000",
        "message": "Message approved"
      },
      "RESULT": {
        "$result": "valid"
      }
    },
    {
      "name": "sensitive_content_rejection",
      "description": "测试包含敏感词的消息被拒绝",
      "input": {
        "callId": "test_call_002",
        "timestamp": 1640995200000,
        "security": "calculated_signature",
        "payload": {
          "from": "user001",
          "to": "user002",
          "msgId": "msg_002",
          "chatType": "chat",
          "msgType": "txt",
          "payload": {
            "msg": "这是垃圾广告信息，请购买我们的产品"
          }
        }
      },
      "expectedOutput": {
        "valid": false,
        "code": "HX:10001",
        "message": "包含敏感内容"
      },
      "RESULT": {
        "$result": "valid"
      }
    },
    {
      "name": "invalid_signature_rejection",
      "description": "测试无效签名被拒绝",
      "input": {
        "callId": "test_call_003",
        "timestamp": 1640995200000,
        "security": "invalid_signature",
        "payload": {
          "from": "user001",
          "to": "user002",
          "msgId": "msg_003",
          "chatType": "chat",
          "msgType": "txt",
          "payload": {
            "msg": "Hello, world!"
          }
        }
      },
      "expectedOutput": {
        "valid": false,
        "code": "HX:40301",
        "message": "Invalid signature"
      },
      "RESULT": {
        "$result": "valid"
      }
    },
    {
      "name": "missing_parameters_error",
      "description": "测试缺少必要参数的错误处理",
      "input": {
        "callId": "test_call_004"
      },
      "expectedOutput": {
        "valid": false,
        "code": "HX:40001",
        "message": "Missing required parameters"
      },
      "RESULT": {
        "$result": "valid"
      }
    },
    {
      "name": "image_message_approval",
      "description": "测试图片消息通过审核",
      "input": {
        "callId": "test_call_005",
        "timestamp": 1640995200000,
        "security": "calculated_signature",
        "payload": {
          "from": "user001",
          "to": "user002",
          "msgId": "msg_005",
          "chatType": "chat",
          "msgType": "img",
          "payload": {
            "url": "https://example.com/image.jpg",
            "filename": "image.jpg",
            "secret": "image_secret",
            "size": {
              "width": 800,
              "height": 600
            }
          }
        }
      },
      "expectedOutput": {
        "valid": true,
        "code": "HX:10000",
        "message": "Message approved"
      },
      "RESULT": {
        "$result": "valid"
      }
    },
    {
      "name": "group_message_approval",
      "description": "测试群组消息通过审核",
      "input": {
        "callId": "test_call_006",
        "timestamp": 1640995200000,
        "security": "calculated_signature",
        "payload": {
          "from": "user001",
          "to": "group001",
          "msgId": "msg_006",
          "chatType": "groupchat",
          "msgType": "txt",
          "payload": {
            "msg": "大家好，这是一条群组消息"
          }
        }
      },
      "expectedOutput": {
        "valid": true,
        "code": "HX:10000",
        "message": "Message approved"
      },
      "RESULT": {
        "$result": "valid"
      }
    }
  ]
}
